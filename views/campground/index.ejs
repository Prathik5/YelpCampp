<% layout('layouts/boilerPlate') %>
<h1>All camps</h1>
<div>
  Add a campground:
  <a href="/campground/new">Create a new Camp</a>
</div>
<% for (let campgrounds of campground) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img src="<%= campgrounds.image  %>" alt="" class="card-img-top" />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= campgrounds.title %></h5>
        <p class="card-text"><%= campgrounds.description %></p>
        <p class="card-text">
          <small class="text-muted"> <%= campgrounds.location %> </small>
        </p>
        <p class="card-text">
          <small class="text-muted"
            >&#8377; <%= campgrounds.price %>/night
          </small>
        </p>
        <a href="/campground/<%= campgrounds._id %>" class="btn btn-primary"
          >View</a
        >
      </div>
    </div>
  </div>
</div>
<% } %>
